<p id="notice"><%= notice %></p>

<h1>Listing Bible Studies</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Lesson</th>
      <th>Takeaways</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bible_studies.each do |bible_study| %>
      <tr>
        <td><%= bible_study.date %></td>
        <td><%= bible_study.lesson %></td>
        <td><%= bible_study.takeaways %></td>
        <td><%= link_to 'Show', bible_study %></td>
        <td><%= link_to 'Edit', edit_bible_study_path(bible_study) %></td>
        <td><%= link_to 'Destroy', bible_study, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

